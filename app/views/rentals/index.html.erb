<h5>Here is the pagination page test for Rentals model</h5>

  <%= paginate @rentals %>
  <%= paginate @rentals, window: 2 %>
  <%= paginate @rentals, outer_window: 3 %>
  <%= paginate @rentals, left: 1, right: 3 %>

  <% @rentals.each_with_index do |rental, index|  %>
    <h6><%= "#{index+1}: " %> <%= rental.tool.name %></h6>
    <li>Returned on: <%= display_return_date(rental) %></li>
    <li>Actual Return on: <%= display_actual_return_date(rental) %></li>
  <% end %>

<br>

<h3>Hello! <%= current_user.username %>, Here is your rentals history</h3>

<ul>
  <% @past_rented_tools.each_with_index do |rental, index|  %>
    <h4><%= "#{index+1}: " %> <%= rental.tool.name %></h4>
    <li>Returned on: <%= display_return_date(rental) %></li>
    <li>Actual Return on: <%= display_actual_return_date(rental) %></li>
  <% end %>
</ul>
