<h3>Here is all the Tools for rental</h3>

<p><%= link_to "Login", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %></p>

<br>

<% @tools.each do |tool| %>
<ul>
  <li><%= tool.name %></li>
  <li><%= tool.category %></li>
  <li><%= tool.brand %></li>
  <li><%= tool.description %></li>
  <li><%= tool.condition %></li>
  <li><%= tool.availability %></li>
</ul>
<% end %>
