<h3>Welcome to Henry's Tool Rental Store</h3>

<p><%= link_to "Login", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %></p>

<br>

<% @tools.each do |tool| %>
<ul>
  <h3><%= tool.name %></h3>
  <li>Category: <%= tool.category %></li>
  <li>Brand: <%= tool.brand %></li>
  <li>Description: <%= tool.description %></li>
  <li>Condition: <%= tool.condition %></li>
  <li>availability: <%= tool.availability %></li>
</ul>
<% end %>
